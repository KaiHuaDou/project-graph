{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "remoteCache": {
    "timeout": 60,
    "uploadTimeout": 120
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "@graphif/app#build": {
      "inputs": ["src/**/*", "*.{ts,tsx,html,css}"],
      "outputs": ["dist/**"]
    },
    "@graphif/docs#build": {
      "inputs": ["**/*"],
      "outputs": ["out"]
    },
    "@graphif/ui#build": {
      "outputs": ["dist/**"]
    },
    "@graphif/app#tauri:build": {
      "dependsOn": ["build"],
      "inputs": ["src-tauri/**/*"],
      "outputs": ["src-tauri/target/release/**"]
    },
    "@graphif/app#tauri:build:android": {
      "dependsOn": ["build"],
      "inputs": ["src-tauri/**/*"],
      "outputs": ["src-tauri/target/*-android/release/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "@graphif/app#tauri:dev": {
      "with": ["dev", "@graphif/docs#dev"],
      "outputs": ["app/src-tauri/target/debug/**"],
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "inputs": ["app/src/**/*.tsx"]
    }
  }
}
